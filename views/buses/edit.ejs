                <input name="Email" type="text" class="form-control" id="CompanyName" aria-describedby="" placeholder="Enter email"  value="<%= bus.email %>">
            </div>
        </div>
        <div class="form-group">
            <label>Edit Bus : </label><br>
            <button type="button" data-toggle="collapse" data-target="#bs-example-collapse-4">
                EDIT
            </button>
            <div class="collapse" id="bs-example-collapse-4">
                <div class="form-group">
                    <label>Licence Number : </label>
                    <input name="Licence" type="text" class="form-control" id="CompanyName" aria-describedby="" placeholder="Enter Licence"  value="<%= bus.Licence %>">
                </div>
                <div class="form-group">
                    <label>Seats Number : </label>
                    <input name="Seats" type="text" class="form-control" id="CompanyName" aria-describedby="" placeholder="Enter seats"  value="<%= bus.seats %>">
                </div>
                <div class="form-group">
                    <label>Bus Type : </label>
                    <input name="Type" type="text" class="form-control" id="CompanyName" aria-describedby="" placeholder="Enter Bus type"  value="<%= bus.type %>" >
                </div>
            </div>
        </div>
